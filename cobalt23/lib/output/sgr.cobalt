var Sgr = {};

var ANSI = require ('output.ansi');

function Sgr.apply(content, sgr_code, sgr_modifier) {
  var command = tostring(sgr_code);

  if( sgr_modifier ) {
    command = command .. ';' .. sgr_modifier .. 'm';
  } else {
    command = command .. 'm';
  }

  return ANSI.wrap(command .. content);
}

return Sgr;
