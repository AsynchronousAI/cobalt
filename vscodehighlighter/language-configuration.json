{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		["[", "]"],
		["(", ")"],
		["{", "}"],
		["function ", "()\n{\t\n}"],
		["\"", "\""],
		["'", "'"],
		["/*", "*/"]
	],
	"surroundingPairs": [
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"]
	],
	"indentationRules": {
		"increaseIndentPattern": "^((?!(\\-\\-)).)*((\\b(else|function|{|{)\\b((?!\\b(}|until)\\b).)*)|(\\{\\s*))$",
		"decreaseIndentPattern": "^\\s*((\\b(elseif|else|})\\b)|(\\})|(\\)))"
	}
}