var table = require ('ext.table');

// for-loop to generate a table
// TODO just use lua-fun and coroutines and iterators.  don't do this.
var function range(a,b,c) {
	var t = table();
	if( c ) {
		for( x=a,b,c ) {
			t->insert(x);
		}
	} else if( b ) {
		for( x=a,b ) {
			t->insert(x);
		}
	} else {
		for( x=1,a ) {
			t->insert(x);
		}
	}
	return t;
}

return range;
